<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:id="@+id/install_wallet_card"
      android:layout_width="340dp"
      android:layout_height="wrap_content"
      android:background="@drawable/background_card"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >

    <TextView
        android:id="@+id/wallet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:text="You need the AppCoins Wallet to complete this purchase."
        android:textColor="@color/black_87_alpha"
        android:textSize="24sp"
        app:fontFamily="@font/roboto_bold"
        />

    <TextView
        android:id="@+id/trusted_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:drawablePadding="10dp"
        android:text="Trusted Payment Method"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/grey_alpha_active_54"
        app:drawableStartCompat="@drawable/trusted"
        />

    <Button
        android:id="@+id/install_button"
        style="@style/ButtonStyle"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-black"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:text="Install the AppCoins Wallet"
        />
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>