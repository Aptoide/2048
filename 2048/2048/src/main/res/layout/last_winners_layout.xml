<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="232dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_last_winners"
    android:layout_marginHorizontal="@dimen/small_margin"
    android:layout_marginVertical="@dimen/big_margin"
    >

  <TextView
      android:id="@+id/last_winners_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:text="@string/last_winners_title"
      style="@style/LastWinners.Text.Title"
      android:layout_marginTop="13dp"
      android:layout_marginBottom="@dimen/small_margin"
    />

  <ImageView
      android:id="@+id/gold_medal"
      android:layout_width="97dp"
      android:layout_height="97dp"
      android:src="@drawable/gold_medal"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/last_winners_title"
      android:layout_marginTop="@dimen/big_margin"
      />

  <TextView
      android:id="@+id/first_username"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/gold_medal"
      app:layout_constraintStart_toStartOf="@id/gold_medal"
      app:layout_constraintEnd_toEndOf="@id/gold_medal"
      android:text="Username1"
      style="@style/LastWinners.Text.Title"
      android:textSize="12sp"
      android:layout_marginTop="15dp"
      android:layout_marginBottom="@dimen/small_margin"
      />

  <TextView
      android:id="@+id/first_winnings"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/first_username"
      app:layout_constraintStart_toStartOf="@id/gold_medal"
      app:layout_constraintEnd_toEndOf="@id/gold_medal"
      android:text="5.00$"
      style="@style/LastWinners.Text.winnings"
      android:layout_marginBottom="@dimen/small_margin"
      />

  <ImageView
      android:id="@+id/silver_medal"
      android:layout_width="78dp"
      android:layout_height="78dp"
      android:src="@drawable/silver_medal"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toStartOf="@id/gold_medal"
      app:layout_constraintBottom_toTopOf="@id/first_username"
      android:layout_marginTop="@dimen/big_margin"
      />

  <TextView
      android:id="@+id/second_username"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/silver_medal"
      app:layout_constraintStart_toStartOf="@id/silver_medal"
      app:layout_constraintEnd_toEndOf="@id/silver_medal"
      android:text="Username2"
      style="@style/LastWinners.Text.Title"
      android:textSize="12sp"
      android:layout_marginTop="18dp"
      android:layout_marginBottom="@dimen/small_margin"
      />

  <TextView
      android:id="@+id/second_winnings"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/second_username"
      app:layout_constraintStart_toStartOf="@id/silver_medal"
      app:layout_constraintEnd_toEndOf="@id/silver_medal"
      android:text="3.00$"
      style="@style/LastWinners.Text.winnings"
      android:layout_marginBottom="@dimen/small_margin"
      />

  <ImageView
      android:id="@+id/bronze_medal"
      android:layout_width="78dp"
      android:layout_height="78dp"
      android:src="@drawable/bronze_medal"
      app:layout_constraintStart_toEndOf="@id/gold_medal"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/first_username"
      android:layout_marginTop="@dimen/big_margin"
      />

  <TextView
      android:id="@+id/third_username"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/bronze_medal"
      app:layout_constraintStart_toStartOf="@id/bronze_medal"
      app:layout_constraintEnd_toEndOf="@id/bronze_medal"
      android:text="Username3"
      style="@style/LastWinners.Text.Title"
      android:textSize="12sp"
      android:layout_marginTop="18dp"
      android:layout_marginBottom="@dimen/small_margin"
      />
  <TextView
      android:id="@+id/third_winnings"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/third_username"
      app:layout_constraintStart_toStartOf="@id/bronze_medal"
      app:layout_constraintEnd_toEndOf="@id/bronze_medal"
      android:text="1.00$"
      style="@style/LastWinners.Text.winnings"
      android:layout_marginBottom="@dimen/small_margin"
      />



</androidx.constraintlayout.widget.ConstraintLayout>