<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="Theme.AppCompat.Transparent" parent="Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.AppCompat.Transparent.FitAppWindow" parent="Theme.AppCompat.Transparent">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="TextAppearance.AppCompat.Headline.Roboto.Medium" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#001727</item>
    </style>

    <style name="TextAppearance.AppCompat.Headline.Roboto.Large" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">40sp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="TextAppearance.AppCompat.Body1.Roboto.Medium" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#828282</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CancelButtonStyle" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/borderless_button_background</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/btn_cancel_text</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/big_padding</item>
        <item name="android:paddingEnd">@dimen/big_padding</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:letterSpacing">.09</item>
    </style>

    <style name="CancelBorderlessButtonStyle" parent="CancelButtonStyle">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ButtonStyle" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@drawable/btn_text_color</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">@dimen/big_padding</item>
        <item name="android:paddingEnd">@dimen/big_padding</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:letterSpacing">.09</item>
    </style>

    <style name="ButtonStyle.Alternative" parent="ButtonStyle">
        <item name="android:background">@drawable/button_snd_background</item>
        <item name="android:textColor">@color/btn_text_enable_color</item>
    </style>

    <style name="LastWinners.Text.Title" parent="TextAppearance.AppCompat.Headline.Roboto.Large">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#242333</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="LastWinners.Text.winnings" parent="LastWinners.Text.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#3DC642</item>
    </style>

    <style name="CountdownTimer.Text" parent="TextAppearance.AppCompat.Headline.Roboto.Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">7sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textColor">@color/countdown_timer_text_color</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="CountdownTimer.Time" parent="LastWinners.Text.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/countdown_timer_text_color</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="NextReward.Title" parent="LastWinners.Text.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
