<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="Theme.AppCompat.Transparent" parent="Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.AppCompat.Transparent.FitAppWindow" parent="Theme.AppCompat.Transparent">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="TextAppearance.AppCompat.Headline.Roboto.Medium" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#001727</item>
    </style>

    <style name="TextAppearance.AppCompat.Headline.Roboto.Large" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">40sp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="TextAppearance.AppCompat.Body1.Roboto.Medium" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#828282</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ButtonStyle" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@drawable/btn_text_color</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">@dimen/big_padding</item>
        <item name="android:paddingEnd">@dimen/big_padding</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:letterSpacing">.09</item>
    </style>
</resources>
